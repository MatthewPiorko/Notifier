head
	title Notifier - Add Site
	link(href='views/addSite.css', rel='stylesheet')
body
	div.navbar
		a(href='/logout').logout Logout
	form(method='post').container
		div
			label Name
			input(name='name', type='text', value=name)
		br
		div
			label URL
			input(name='url', type='text')
		br
		div
			label Selector
			input(name='selector', type='text')
		br
		div
			label Rank
			select(name='rank')
				option(value='1') 1
				option(value='2', selected='selected') 2
				option(value='3') 3
		button.submit Add